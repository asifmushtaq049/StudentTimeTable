<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.climesoft.studenttimetable">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TimeTableActivity"
            android:label="TimeTable" />
        <activity
            android:name=".SubjectActivity"
            android:label="Subject" />
        <activity
            android:name=".AssignmentActivity"
            android:label="Assignment" />
        <activity
            android:name=".QuizActivity"
            android:label="Quiz" />
        <activity
            android:name=".QuizAddActivity"
            android:label="Add Quiz" />
        <activity
            android:name=".SubjectAddActivity"
            android:label="Add Subject" />
        <activity
            android:name=".AssignmentAddActivity"
            android:label="Add Assignment" />
        <activity
            android:name=".TimeTableDetailActivity"
            android:label="TimeTable Detail" />
        <activity
            android:name=".TimeTableAddActivity"
            android:label="Add TimeTable" />
        <activity
            android:name=".RegistrationActivity"
            android:label="Register" />
        <activity
            android:name=".GroupActivity"
            android:label="Groups" />
        <activity
            android:name=".GroupAddActivity"
            android:label="Add Group" />
        <activity
            android:name=".GroupChatActivity"
            android:label="Group Chat" />
        <activity
            android:name=".GroupChatSendNotification"
            android:label="Send Notification to Group" />
        <activity
            android:name=".SettingActivity"
            android:label="Setting" />
        <receiver android:name=".broadcast.NotificationReceiver"/>
    </application>

</manifest>